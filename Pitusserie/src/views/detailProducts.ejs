<!DOCTYPE html>
<html lang="es">

	<%- include('./partials/head') %>

<body class="body-detail">

	<%- include('./partials/header') %>
		
	<div class="container products-wrapper" id="detaill">
		<div class="row">			
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/uploads/productos/<%= producto.img %>" alt="product image" class="product-detail-img">
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= producto.title %></h2>

						<p class="product-detail-price small">
							Precio: $<%= producto.price %>
						</p>
						
						<ul class="actions-list">
							<li>
								<p class="product-detail-description">
									<%= producto.description %>
								</p>
							</li>
	
						</ul>
						<div id="botonera">

							<% if(session == undefined) { %> 
								<a href="/users/login">
									<button class="botonComprar">Comprar</button>
								</a>
							  <% } else { %>
								<a href="/users/cart/addIr/<%= producto.id %>">
									<button class="botonComprar">Comprar</button>
								</a>
							  <% } %>
							
							<% if(session == undefined) { %> 
								<a href="/users/login">
									<button class="botonCarrito"><i class="fas fa-cart-plus"></i></button>
								</a>
							  <% } else { %>
								<a href="/users/cart/add/<%= producto.id %>">
									<button class="botonCarrito"><i class="fas fa-cart-plus"></i></button>
								</a> 
							  <% } %> 
							<% if(session && session.administrador == true) { %> 
								<a href="/products/edit/<%= producto.id %> ">
									<button class="botonComprar">Editar</button>
								</a>
							<% } %>
						</div>
							
					</article>
				</div>
			</div>
		</div>
	</div>

		<div class="container agregar-productos" id="agregar">
			<h2>Agregar Productos</h2>
			<div class="agregar-productos-img">
				<a href="/products/61">
					<div class="titulo">
						<p>Adorno Porcelana</p>
					</div>
					<img src="/uploads/productos/1598381371688.jpeg" alt="">
				</a>
				<a href="/products/63">
					<div class="titulo">
						<p>Globos</p>
					</div>
					<img src="/uploads/productos/1598381444884.jpeg" alt="">
				</a>
				<a href="/products/68">
					<div class="titulo">
						<p>Tazas</p>
					</div>
					<img src="/uploads/productos/1598381623264.jpeg" alt="">
				</a>
			</div>
		</div>

	</div>
	</div>

	<%- include('./partials/whatsappLogo') %>

	<%- include('./partials/footer') %>

	<%- include('./partials/scripts') %>
</body>

</html>