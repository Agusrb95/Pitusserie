              <% } else { %>
                <a href="/users/user"><li>Mi perfil</li></a>
              <% } %> 
              <% if(session == undefined) { %> 
                <a href="/users/login"><li><i class="fas fa-shopping-cart"></i></li></a>
              <% } else { %>
                <a href="/users/cart"><li><i class="fas fa-shopping-cart"></i></li></a>
              <% } %>
              <% if(session && session.administrador == true) { %> 
                <a href="/products/carga"><li>Carga de productos</li></a>
									
								</a>
							<% } %>
             
           </ul>
        </div>
      </div>
      
      <div class="divLogo">
        <a href="/" class="logo"><img src="img/logo.jpeg" alt="logo"></a>
      </div>
      <div class="derecha">
        <div class="sesionesDiv">
          <% if(session == undefined) { %> 
            <a href="/users/login"><button class="sesiones"><i class="fas fa-user persona"></i>
                Iniciar Sesion
              <% } else { %>
                <a href="/users/user"><button class="sesiones" id="usuarioLogueado">
                <i class="fas fa-user-circle"></i>
                Hola, <%= session.nombre %> 
              <% } %> 
            </button></a>
        </div>
        <div class="carritoDiv"> 
          <% if(session == undefined) { %> 
              <a href="/users/login"class="carrito"><i class="fas fa-shopping-cart"></i></a>
          <% } else { %>
              <a href="/users/cart"class="carrito"><i class="fas fa-shopping-cart"></i><span class="cCartIndex cCart"></span></a>
          <% } %>
        </div>

      </div>
    </div>
  </header>

