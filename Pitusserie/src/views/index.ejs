<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/head') %>
  
<body>

  <header class="home">
    <div class="container">

      <div class="hamburguesa">
        <button class="buttonHamburguesa" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          <i class="fas fa-bars barras"></i>
        </button>
        <div class="collapse" id="collapseExample">
          <div class="card card-body">
            <button class="buttonX" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
              <i class="fas fa-times x"></i>
            </button>
            <ul>
              <li><img src="img/logo.jpeg" alt="logo"></li>
              <li>Ingresá</li>
              <li>Productos</li>
              <li>Contacto</li>
              <li><i class="fas fa-shopping-cart"></i></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="shopSale">Shop/Sale</div>
      <div class="divLogo">
        <a href="/" class="logo"><img src="img/logo.jpeg" alt="logo"></a>
      </div>
      <a href="#"class="carrito"><i class="fas fa-shopping-cart"></i></a>
      <div class="redes"><i class="fab fa-instagram"></i><i class="fab fa-facebook"></i><i class="fab fa-pinterest"></i><i class="fab fa-linkedin-in"></i></div>
    </div>
  </header>

        <section class="diapositivas">
          <div class="container">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="img/1.jpg" class="d-block w-100" alt="1">
                </div>
                <div class="carousel-item">
                  <img src="img/2.jpg" class="d-block w-100" alt="2">
                </div>
                <div class="carousel-item">
                  <img src="img/3.jpg" class="d-block w-100" alt="3">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </section>

        <section class="productos">
          <div class="container">
            <h2>Clases</h2>
            <div class="row">

              <% for(i = 0; i < productos.length; i++) { %> 
                  <article class="col-12 col-md-6 col-lg-3">
                    <div class="producto">
                      <h3><%= productos[i].nombre %></h3>
                      <div class="productoImagen">
                      <img src="img/<%= productos[i].img %>" alt="">
                      </div>
                      <div class="texto">
                        <div class="precioCarrito">
                          <h4>$<%= productos[i].precio %></h4>
                          <span class="carritoMas"><i class="fas fa-cart-plus"></i></span>
                        </div>
                        <h5><%= productos[i].horarios %></h5>
                      </div>
                    </div>
                  </article>
                <% } %> 

            </div>
          </div>
        </section>
          

        <footer>
          <div class="container">
            <a href="" class="arriba"><div>Volver arriba</div></a>
            <small class="copyright">Copyright © 1999-2020 DXT S.R.L.</small>
          </div>
        </footer>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>