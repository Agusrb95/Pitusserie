  <%- include('./partials/headerMovil') %>

  <header class="home">

    <div class="divCierreMenuBar" id="divCierreMenuBar"></div>

    <div class="container">
      <div class="izquierda">
        <div class="hamburguesa">
          <button class="buttonHamburguesa" id="buttonHamburguesa">
            <i class="fas fa-bars barras"></i>
          </button>
        </div>

        <div class="menuBar widthMenuBar" id="menuBar">
            <button class="cruzCollapse" id="buttonCruz">
              <i class="fas fa-times x"></i>
           </button>
            <ul>
              <a href="/"><li><img src="/img/logo.jpeg" alt="logo"></li></a>
              <a href="/"><li>Inicio</li></a>
              <a href="/products"><li>Productos</li></a>
              <% if(session == undefined) { %> 
                <a href="/users/login"><li>Ingresá</li></a>
