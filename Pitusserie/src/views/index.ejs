<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/head') %>
  
<body>

  <%- include('./partials/headerMovil') %>

  <header class="home">
    <div class="container">

      <div class="hamburguesa">
        <button class="buttonHamburguesa" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          <i class="fas fa-bars barras"></i>
        </button>
        <div class="collapse" id="collapseExample">
          <div class="card card-body">
            <button class="buttonX" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
              <i class="fas fa-times x"></i>
            </button>
            <ul>
              <a href="/"><li><img src="img/logo.jpeg" alt="logo"></li></a>
              <a href="/"><li>Inicio</li></a>
              <a href="/login"><li>Ingresá</li></a>
              <a href="/register"><li>Creá una cuenta</li></a>
              <a href="/products"><li>Productos</li></a>
              <a href="#footer"><li>Contacto</li></a>
              <a href=""><li><i class="fas fa-shopping-cart"></i></li></a>
            </ul>
          </div>
        </div>
      </div>

      <a href="/products"><div class="productsHeader">Productos</div></a>
      <div class="divLogo">
        <a href="/" class="logo"><img src="img/logo.jpeg" alt="logo"></a>
      </div>
      <a href="#"class="carrito"><i class="fas fa-shopping-cart"></i></a>
      <div class="redes"> <a href=""><i class="fab fa-instagram"></i></a> <a href=""><i class="fab fa-facebook"></i></a> <a href=""><i class="fab fa-pinterest"></i></a> <a href=""><i class="fab fa-linkedin-in"></i></a> </div>
    </div>
  </header>

        <section class="diapositivas">
          <div class="carrusel">
            <div class="gallery js-flickity" data-flickity-options='{ "wrapAround": true }'>
              <div class="gallery-cell"><img src="img/1.jpg" alt=""></div>
              <div class="gallery-cell"><img src="img/2.jpg" alt=""></div>
              <div class="gallery-cell"><img src="img/3.jpg" alt=""></div>
              <div class="gallery-cell"><img src="img/4.jpg" alt=""></div>
              <div class="gallery-cell"><img src="img/5.jpg" alt=""></div>
              <div class="gallery-cell"><img src="img/6.jpg" alt=""></div>
              <div class="gallery-cell"><img src="img/7.jpg" alt=""></div>
            </div>
          </div>
        </section>

        <section class="productos">
          <div class="container">
            <h2>Productos</h2>
            <div class="row">
  
              <% for(i = 0; i < productos.length; i++) { %> 
                <article class="col-12 col-md-6 col-lg-3">
                    <a href="">
                        <div class="producto">
                            <h3><%= productos[i].nombre %></h3>
                            <div class="productoImagen">
                            <img src="img/<%= productos[i].img %>" alt="">
                            </div>
                            <div class="texto">
                            <div class="precioCarrito">
                                <h4>$<%= productos[i].precio %></h4>
                                <a href="#"><span class="carritoMas"><i class="fas fa-cart-plus"></i></span></a>
                            </div>
                            <h5><%= productos[i].miniDesc %></h5>
                            </div>
                        </div>
                    </a>
                </article>
          <% } %> 
  
            </div>
          </div>
        </section>

        <%- include('./partials/whatsappLogo') %>
          
        <%- include('./partials/footer') %>

    </div>
    <%- include('./partials/scripts') %>
</body>
</html>