<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %>
<body>

    <%- include('./partials/header') %>

      <section class="registracion">
        <div class="container">
            <h2>Hola, <%= session.nombre %></h2>
            <div class="formRegistracion">
                <form action="?_method=PUT" method="POST" >
                    <div class="contenedorForm">
                        <div class="labelInput">
                            <label for="nombre">Nombre</label>
                            <input type="text" id="nombre" name="nombre" value=<%= session.nombre %>>
                            <% if(typeof errors !='undefined' && errors.nombre) { %>
                                <p><%= errors.nombre.msg %></p>
                            <% } %>
                        </div>
                        <div class="labelInput">
                            <label for="apellido">Apellido</label>
                            <input type="text" id="apellido" name="apellido" value=<%= session.apellido %>>
                            <% if(typeof errors !='undefined' && errors.apellido) { %>
                                <p><%= errors.apellido.msg %></p>
                            <% } %>
                        </div>
                        <div class="labelInput">        
                            <label for="dni">DNI</label>
                            <input type="number" id="dni" name="dni" value=<%= session.dni %>>
                            <% if(typeof errors !='undefined' && errors.dni) { %>
                                <p><%= errors.dni.msg %></p>
                            <% } %>
                        </div>
                        <div class="labelInput">
                            <label for="telefono">Telefono</label>
                            <input type="number" id="telefono" name="telefono" value=<%= session.telefono %>>
                            <% if(typeof errors !='undefined' && errors.telefono) { %>
                                <p><%= errors.telefono.msg %></p>
                            <% } %>
                        </div>
                        <div class="labelInput">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" value=<%= session.email %>>
                            <% if(typeof errors !='undefined' && errors.email) { %>
                                <p><%= errors.email.msg %></p>
                            <% } %>
                        </div>
                    </div>
                    <div class="divsubmit">
                        <div class="submit"><button id="submitUsers" type="submit">Guardar Cambios</button></div>
                    </div>
                </form>
                <form action="?_method=DELETE" method="POST" class="deleteUsers">
                    <button type="submit" class="botonEliminar">Eliminar</button>
                </form>
            </div>
        </div>
      </section>

    <%- include('./partials/whatsappLogo') %>
          
    <%- include('./partials/footer') %>

    <%- include('./partials/scripts') %>
</body>
</html>