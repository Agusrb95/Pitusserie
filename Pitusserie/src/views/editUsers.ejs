<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %>
<body>

    <%- include('./partials/header') %>

      <section class="registracion">
        <div class="container">
            <h2>Hola, <%= usuario.nombre %></h2>
            <div class="formRegistracion">
                <form action="?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="contenedorForm">
                        <div class="labelInput">
                            <label for="nombre">Nombre</label>
                            <input type="text" id="nombre" name="nombre" value=<%= usuario.nombre %>>
                        </div>
                        <div class="labelInput">
                            <label for="apellido">Apellido</label>
                            <input type="text" id="apellido" name="apellido" value=<%= usuario.apellido %>>
                        </div>
                        <div class="labelInput">        
                            <label for="dni">DNI</label>
                            <input type="number" id="dni" name="dni" value=<%= usuario.dni %>>
                            <% if(true) { %>
                                <p>Introduzca un DNI válido</p>
                            <% } %>
                        </div>
                        <div class="labelInput">
                            <label for="telefono">Telefono</label>
                            <input type="number" id="telefono" name="telefono" value=<%= usuario.telefono %>>
                            <% if(true) { %>
                                <p>Introduzca un telefono válido</p>
                            <% } %>
                        </div>
                        <div class="labelInput">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" value=<%= usuario.email %>>
                            <% if(true) { %>
                                <p>Introduzca un email válido</p>
                            <% } %>
                        </div>
                        <div class="labelInput">
                            <label for="contrasena1">Contraseña</label>
                            <input type="password" id="contrasena1" placeholder="Entre 6 y 20 caracteres" name="contrasena" value=<%= usuario.contrasena%>>
                            <% if(true) { %>
                                <p>Introduzca una contraseña que contenga entre 6 y 20 caracteres</p>
                            <% } %>
                        </div>
                        <div class="labelInput">
                            <label for="contrasena2">Repita su contraseña</label>
                            <input type="password" id="contrasena2" name="contrasena" value=<%= usuario.contrasena%>>
                            <% if(true) { %>
                                <p>Sus dos contraseñas no coinciden</p>
                            <% } %>
                        </div>
                    </div>
                    <div class="divsubmit">
                        <div class="submit"><button id="submitUsers" type="submit">Guardar Cambios</button></div>
                    </div>
                </form>
                <form action="?_method=DELETE" method="POST" class="deleteUsers">
                    <button type="submit" class="botonEliminar">Eliminar</button>
                </form>
            </div>
        </div>
      </section>

    <%- include('./partials/whatsappLogo') %>
          
    <%- include('./partials/footer') %>

    <%- include('./partials/scripts') %>
</body>
</html>