<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %>
<body>

    <%- include('./partials/header') %>

      <section class="registracion">
        <div class="container">
            <h2>Editar Producto</h2>
            <div class="formRegistracion">
                <form action="?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="contenedorForm">
                        <div class="labelInput">
                            <label for="categorie">Categorias</label>
                            <select name="categorie" id="categorie">
                                <% for(i = 0; i < categorias.length; i++) { %>
                                    <option
                                        value=<%= categorias[i].id %>
                                        <%= (producto.categorie_id == categorias[i].id) ? "selected" : "" %>><%= categorias[i].categorie %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="labelInput">
                            <label for="subCategorie">Sub Categorias</label>
                            <select name="subCategorie" id="subCategorie">
                                <option value=<%= producto.sub_categorie_id %>> <%= (producto.sub_categorie_id != 0) ? producto.subCategorie.sub_categorie : 'no tiene sub categorias' %> </option>
                            </select>
                        </div>
                        <div class="labelInput">
                            <label for="titulo">Titulo</label>
                            <input type="text" id="titulo" name="titulo" value='<%= producto.title %>'>
                        </div>
                        <div class="labelInput">        
                            <label for="descripcion">Descripcion</label>
                            <input type="text" id="descripcion" name="descripcion" value='<%= producto.description %>'>
                        </div>
                        <div class="labelInput">
                            <label for="precio">Precio</label>
                            <input type="number" id="precio" name="precio" value=<%= producto.price %>>
                        </div>
                        <div class="labelInput inputImg">
                            <label for="imagenes">Agregar imagenes</label>
                            <input type="file" name="imagen">
                        </div>
                        <div class="labelInput">
                            <label for="porciones">Porciones</label>
                            <input type="number" id="porciones" name="porciones" value=<%= producto.slices %>>
                        </div>
                    <div class="divsubmit">
                        <div class="crearProducto"><button type="submit">Guardar cambios</button></div>
                    </div>              
                </form>
                <form action="?_method=DELETE" method="POST">
                    <button type="submit" class="botonEliminar">Eliminar</button>
                </form>
            </div>
        </div>
      </section>

    <%- include('./partials/whatsappLogo') %>
          
    <%- include('./partials/footer') %>

    <%- include('./partials/scripts') %>
    <script src="/js/subCategoriesEdit.js"></script>
</body>
</html>