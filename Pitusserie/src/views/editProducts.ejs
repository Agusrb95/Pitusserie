<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %>
<body>

    <%- include('./partials/header') %>

      <section class="registracion">
        <div class="container">
            <h2>Carga Producto</h2>
            <div class="formRegistracion">
                <form action="?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="contenedorForm">
                        <div class="labelInput">
                            <label for="categorias">Categorias</label>
                            <input type="text" id="categorias" name="categorias" value=<%= producto.categorias %>>
                        </div>
                        <div class="labelInput">
                            <label for="titulo">Titulo</label>
                            <input type="text" id="titulo" name="titulo" value=<%= producto.titulo %>>
                        </div>
                        <div class="labelInput">        
                            <label for="descripcion">Descripcion</label>
                            <input type="text" id="descripcion" name="descripcion" value=<%= producto.miniDesc %>>
                        </div>
                        <div class="labelInput">
                            <label for="precio">Precio</label>
                            <input type="number" id="precio" name="precio" value=<%= producto.precio %>>
                        </div>
                        <div class="labelInput inputImg">
                            <label for="imagenes">Agregar imagenes</label>
                            <input type="file" name="imagen">
                        </div>
                        <div class="labelInput">
                            <label for="porciones">Porciones</label>
                            <input type="number" id="porciones" name="porciones" value=<%= producto.porciones %>>
                        </div>
                    <div class="divsubmit">
                        <div class="crearProducto"><button type="submit">Guardar cambios</button></div>
                    </div>              
                </form>
                <form action="?_method=DELETE" method="POST">
                    <button type="submit" class="botonEliminar">Eliminar</button>
                </form>
            </div>
        </div>
      </section>

    <%- include('./partials/whatsappLogo') %>
          
    <%- include('./partials/footer') %>

    <%- include('./partials/scripts') %>
</body>
</html>