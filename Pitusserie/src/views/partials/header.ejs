<header class="general">

  <div class="divCierreMenuBar" id="divCierreMenuBar"></div>

  <div class="container">
    <div class="izquierda">
    <div class="hamburguesa">
      <button class="buttonHamburguesa" id="buttonHamburguesa">
        <i class="fas fa-bars barras"></i>
      </button>
    </div>

    <div class="menuBar widthMenuBar" id="menuBar">
        <button class="cruzCollapse" id="buttonCruz">
          <i class="fas fa-times x"></i>
        </button>
        <ul>
          <a href="/"><li><img src="/img/logo.jpeg" alt="logo"></li></a>
          <a href="/"><li>Inicio</li></a>
          <a href="/products"><li>Productos</li></a>
          <a href="/users/login"><li>Ingresá</li></a>
          <a href="/users/register"><li>Creá una cuenta</li></a>
          <% if(session == undefined) { %> 
            <a href="/users/login"><li><i class="fas fa-shopping-cart"></i></li></a>
          <% } else { %>
            <a href="/users/cart"><li><i class="fas fa-shopping-cart"></i></li></a> 
          <% } %> 
          <% if(session && session.administrador == true) { %> 
            <a href="/products/carga"><li>Carga de productos</li></a>
          <% } %>
        </ul>
    </div>
  </div>
    
    <div class="divLogo">
      <a href="/" class="logo"><img src="/img/logo.jpeg" alt="logo"></a>
    </div>
    <div class="derecha">
      <div class="sesionesDiv">
        <% if(session == undefined) { %> 
          <a href="/users/login"><button class="sesiones"><i class="fas fa-user persona"></i>
              Iniciar Sesion
            <% } else { %>
              <a href="/users/user"><button class="sesiones" id="usuarioLogueado">
              <i class="fas fa-user-circle"></i>
              Hola, <%= session.nombre %> 
            <% } %> 
          </button></a>
      </div>
      <div class="carritoDiv"> 
      <% if(session == undefined) { %> 
          <a href="/users/login"class="carrito"><i class="fas fa-shopping-cart"></i></a>
      <% } else { %>
          <a href="/users/cart"class="carrito"><i class="fas fa-shopping-cart"></i></a>
      <% } %>
      </div>
      
    </div>
    
  </div>
</header>

<%- include('./headerMovil') %>